.container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 1rpx;
  margin: auto 20rpx;
  border-bottom: solid 1.5px #f1f1f1;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 500rpx;
  padding: 0 10rpx; 
}

.text {
  color: #3d3d3d;
  font-size: 15px;
  font-weight: bold;
}

.img-container{
  width: 170rpx;
  height: 170rpx;
  margin: 18rpx;
}

.img{
  width: 200rpx;
  height: 200rpx;
  border-radius: 33rpx;
  margin: 40rpx 5rpx;
}

.desc-item {
  display: flex;
  flex-direction: row;
  justify-content: baseline;
  color: #dfdfdf;
  padding: 30rpx 10rpx;
  width: 100%;
}

.classify{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  background-color: #eef9f5;
  font-size: 13px;
  border-radius: 2rpx;
}

.desc {
  color:  #7cddc9;
  font-size: 13px;
}

.desc-text {
  font-size: 13px;
  color:#bbbbbb;
  margin: 0 5rpx;
}