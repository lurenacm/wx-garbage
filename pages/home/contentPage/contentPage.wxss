.container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    background-color: #f7f8fa;
}

.content-container {
    background-color: white;
    width: 85%;
    border-radius: 15rpx;
    margin: 20rpx auto;
    padding: 20rpx;
}

.content-img {
    width: 100%;
    padding: 10rpx auto;
    margin-bottom: 40rpx;
    border-radius: 20rpx;
    box-shadow:2px 4px 3px rgb(176, 212, 238)
}

.text-container{
    margin-bottom: 20rpx;
}

.content-text {
    white-space: pre-wrap;
    color: #4B4B4B;
    font-size: medium;
    letter-spacing: 2px;
    line-height: 30px;
    font-family: Arial,"Microsoft YaHei";
    /* font-family: Arial, Helvetica, sans-serif; */
}