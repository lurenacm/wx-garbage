.container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    background-color: #f7f8fa;
}

.content-container {
    background-color: white;
    width: 80%;
    /* height: 80%; */
    border-radius: 15rpx;
    margin: 20rpx auto;
    padding: 20rpx;
}

.content-img {
    width: 100%;
    padding: 10rpx auto;
    margin-bottom: 10rpx;
    border-radius: 10rpx;
}

.content-text {
    white-space: pre-wrap;
}